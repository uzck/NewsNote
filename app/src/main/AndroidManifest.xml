<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nozoeli.newsnote">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:name="org.litepal.LitePalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.GuidanceActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity"
            android:theme="@style/MainAppTheme"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewsDetailActivity"
            android:theme="@style/SwipeBackTheme"/>
        <activity android:name=".activity.AlbumActivity"
            android:theme="@style/albumTheme" />
        <activity android:name=".activity.AddNoteActivity"
            android:theme="@style/albumTheme" />
        <activity android:name=".activity.NoteShowActivity"
            android:theme="@style/albumTheme" />
    </application>

</manifest>